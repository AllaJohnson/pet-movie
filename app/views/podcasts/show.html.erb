  <div id="podcasts_show">
    <div id="show_banner">
      <div class="wrapper_skinny">
        <%= image_tag @podcast.logo.url(:thumb) %>
      <h1><%= @podcast.title %></h1>
      <p class="description"><%= @podcast.description %></p>

      <% unless @podcast.itunes.blank? %>
        <a href="<%= @podcast.itunes %>" class="subscribe_link">iTunes</a>
      <% end %>

      <% unless @podcast.stitcher.blank? %>
        <a href="@pocast.stitcher" class="subscribe_link">Stitcher</a>
      <% end %>
      <% unless @podcast.podbay.blank? %>
        <a href="@pocast.podbay" class="subscribe_link">PodBay</a>
      <% end %>
    </div>
  </div>

  <div id="breadcrumb">
    <%= link_to podcasts_path do %>
      All Podcasts
      <span>/</span>
      <%= @podcast.title %>
    <% end %>
  </div>

  <div id="episodes">
    <div class="wrapper_skinny">
      <ul class="cf">
        <% @episodes.each do |episode| %>
        <li class="cf">
          <div class="episode_thumbnail">
            <a href="#l">
              <%= image_tag episode.episode_logo.url(:thumb) %>
            </a>
          </div>
          <div class="episode_overview">
            <h2><%= link_to episode.title, podcast_episode_path(@podcast, episode) %></h2>
            <p class="description"><%= truncate(episode.description, length: 160) %></p>
          </div>
        </li>
        <% end %>
      </ul>
      <%= will_paginate @episodes, previous_label: "<<", next_label: ">>" %>
    </div>
  </div>
</div>
