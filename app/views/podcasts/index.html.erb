
  <div id="banner" class="podcasts_banner">
    <h1>Discover your new favorite podcast</h1>
  </div>
  <div id="podcasts" class="cf">
    <div class="wrapper">
      <ul>
        <% @podcasts.each do |podcast| %>
          <%= link_to podcast do %>
            <li>
              <img src="assets/yorki_1.jpg" alt="">
              <div class="podcasts_overview">
                <h2><%= podcast.title %></h2>
                <p class="episode_count">1 Episode</p>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="pagination">
    <span class="previous_page disabled">Previous</span>
    <em class="current">1</em>
    <a href="#">2</a>
    <a class="next_page" href="#">Next</a>
  </div>
